<%-include('cabecalho.ejs')%>
<title>Listagem de Eleições</title>
<style>
    
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    form {
        width: 300px;
        margin: 0 auto;
        margin-bottom: 20px;
    }

    input[type="text"],
    input[type="submit"] {
        margin-bottom: 10px;
        width: calc(100% - 12px);
        padding: 6px;
        border: 1px solid #ccc;
        border-radius: 3px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        background-color: #273086;
        color: white;
        cursor: pointer;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 20px;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<form method="post">
    <input type="text" name="pesquisar" id="pesquisar">
    <input type="submit" value="Pesquisar">
</form>


<table>
    <tr>
        <th>Ano da Eleição</th>
        <th>Editar</th>
        <th>Delete</th>
    </tr>

    <%eleicao.forEach(function(eleicao){%>
    <tr>
        <td><%=eleicao.eleicano%></td>
        <td><a href="/edteleicao/<%=eleicao._id%>">Editar</a></td>
        <td><a href="/deleleicao/<%=eleicao._id%>">Delete</a></td>
    </tr>
    <% }) %>
</table>
<%-include('rodape.ejs')%>