<%-include('cabecalho.ejs')%>
<style>
    form {
        margin-top: 20px;
        display: flex;
        flex-direction: column;
        max-width: 300px;
        margin-left: auto;
        margin-right: auto;
    }

    label {
        margin-bottom: 5px;
    }

    input[type='text'],
    input[type='number'],
    input[type='date'] {
        padding: 8px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    input[type='submit'] {
        padding: 8px 20px;
        border: none;
        border-radius: 5px;
        background-color: #254291;
        color: white;
        cursor: pointer;
    }

    input[type='submit']:hover {
        background-color: #38328b;
    }
</style>

<form method="post">
    <label for="id">Id</label>
    <input type="number" name="id" id="id" required readonly value="<%=eleitor._id%>"><br>
    <label for="nome">Nome/label>
    <input type="text" name="nome" id="nome" required placeholder="Digite o seu Nome." value="<%=eleitor.nome%>"><br>
    <label for="titulo">Titulo</label>
    <input type="number" name="titulo" id="titulo" required placeholder="Digite o seu Titulo Eleitoral:"value="<%=eleitor.titulo%>"><br>
    <label for="cpf">Cpf</label>
    <input type="number" name="cpf" id="cpf" required placeholder="Digite o seu Cpf"value="<%=eleitor.cpf%>"><br>
    <label for="filiacao">Filiação</label>
    <input type="text" name="filiacao" id="filiacao" required placeholder="Digite a sua Filiação"value="<%=eleitor.filiacao%>"><br>
    <label for="end">Endereço</label>
    <input type="text" name="end" id="end" required placeholder="Digite o seu Endereço"value="<%=eleitor.end%>"><br>
    <label for="datanasc">Data de Nascimento</label>
    <input type="date" name="datanasc" id="datanasc" required placeholder="Digite a sua data de Nascimento"value="<%=eleitor.datanasc%>"><br>
    <input type="submit" value="Adicionar">
</form>
<%-include('rodape.ejs')%>